<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/size_10">

    <com.Alan.eva.ui.widget.CircleImageView
        android:id="@+id/circle_child_portrait"
        android:layout_width="@dimen/size_50"
        android:layout_height="@dimen/size_50"
        android:src="@mipmap/ic_flag_default_portrait"
        app:civ_border_color="@color/gray_207_207_207"
        app:civ_border_width="1dp" />

    <LinearLayout
        android:id="@+id/ll_child_list_info_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_item_child_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/slt_flag_gender"
                android:gravity="center_vertical"
                android:padding="@dimen/size_3"
                android:text="@string/child_name_txt"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_child_list_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_child_owner"
                android:paddingBottom="@dimen/size_1"
                android:paddingEnd="@dimen/size_5"
                android:paddingStart="@dimen/size_5"
                android:paddingTop="@dimen/size_1"
                android:text="亲"
                android:textColor="@color/white"
                android:textSize="@dimen/font_10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5"
            android:orientation="horizontal"
            android:padding="@dimen/size_5">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_item_child_list_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9岁" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_item_child_list_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10"
                android:text="112cm" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_item_child_list_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10"
                android:text="60kg" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_child_list_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_5"
                android:background="@drawable/shape_bg_child_default"
                android:paddingBottom="@dimen/size_1"
                android:paddingEnd="@dimen/size_5"
                android:paddingStart="@dimen/size_5"
                android:paddingTop="@dimen/size_1"
                android:text="默认"
                android:textColor="@color/white"
                android:textSize="@dimen/font_12" />
        </LinearLayout>

        <include layout="@layout/layout_horizontal_gray_line" />
    </LinearLayout>
</LinearLayout>