<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/firstF" >

        <ImageView
            android:id="@+id/alarmA_img_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/register_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="吃药提醒"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/system_clock"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="系统闹钟"
            android:visibility="invisible"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>
    <ListView 
        android:id="@+id/alarmA_lv_alarmlist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"></ListView>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
        <ImageView 
            android:id="@+id/alarmA_lv_addlist"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/addalarm"/>
    </LinearLayout>

</LinearLayout>