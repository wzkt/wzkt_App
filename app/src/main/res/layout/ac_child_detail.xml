<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar_child_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:paddingTop="@dimen/tool_bar_top_padding" />

    <com.Alan.eva.ui.widget.FlexibleScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size_20">

            <com.Alan.eva.ui.widget.CircleImageView
                android:id="@+id/circle_child_detail_portrait"
                android:layout_width="@dimen/size_60"
                android:layout_height="@dimen/size_60"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_20"
                android:src="@mipmap/ic_flag_default_portrait" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:paddingBottom="@dimen/size_15"
                android:paddingEnd="@dimen/size_20"
                android:paddingStart="@dimen/size_20"
                android:paddingTop="@dimen/size_15">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/child_name"
                    android:textSize="@dimen/font_14" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_child_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/black_89_89_89"
                    android:textSize="@dimen/font_14"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>

            <include layout="@layout/layout_horizontal_gray_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/size_15"
                android:paddingEnd="@dimen/size_20"
                android:paddingStart="@dimen/size_20"
                android:paddingTop="@dimen/size_15">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/child_gender"
                    android:textSize="@dimen/font_14" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_child_detail_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/black_89_89_89"
                    android:textSize="@dimen/font_14"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>

            <include layout="@layout/layout_horizontal_gray_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/size_15"
                android:paddingEnd="@dimen/size_20"
                android:paddingStart="@dimen/size_20"
                android:paddingTop="@dimen/size_15">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/child_age"
                    android:textSize="@dimen/font_14" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_child_detail_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black_89_89_89"
                    android:textSize="@dimen/font_14"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>

            <include layout="@layout/layout_horizontal_gray_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/size_15"
                android:paddingEnd="@dimen/size_20"
                android:paddingStart="@dimen/size_20"
                android:paddingTop="@dimen/size_15">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_child_detail_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:inputType="number"
                    android:textColor="@color/black_89_89_89"
                    android:textSize="@dimen/font_14"
                    tools:ignore="RelativeOverlap" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/child_height"
                    android:textSize="@dimen/font_14" />


            </RelativeLayout>

            <include layout="@layout/layout_horizontal_gray_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/size_15"
                android:paddingEnd="@dimen/size_20"
                android:paddingStart="@dimen/size_20"
                android:paddingTop="@dimen/size_15">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/child_weight"
                    android:textSize="@dimen/font_14" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_child_detail_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black_89_89_89"
                    android:textSize="@dimen/font_14"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>
            <include layout="@layout/layout_horizontal_gray_line" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/size_15"
                android:paddingEnd="@dimen/size_20"
                android:paddingStart="@dimen/size_20"
                android:paddingTop="@dimen/size_15">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mac_address"
                    android:textSize="@dimen/font_14" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_child_mac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black_89_89_89"
                    android:textSize="@dimen/font_14"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>

            <include layout="@layout/layout_horizontal_gray_line" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/cb_child_detail_set_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableEnd="@drawable/slt_check_box_drawable"
                android:paddingBottom="@dimen/size_15"
                android:paddingEnd="@dimen/size_20"
                android:paddingStart="@dimen/size_20"
                android:paddingTop="@dimen/size_15"
                android:text="设为默认"
                android:textColor="@color/gray_123_123_123"
                android:textSize="@dimen/font_14" />


            <RelativeLayout
                android:id="@+id/rl_child_detail_monitor_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:background="@color/gray_207_207_207"
                android:padding="@dimen/size_10">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/size_10"
                    android:text="监护人列表"
                    android:textSize="@dimen/font_16" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_child_detail_add_monitor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/size_10"
                    android:textColor="@color/orange_255_49_0"
                    android:padding="@dimen/size_3"
                    android:text="添加" />
            </RelativeLayout>

            <com.Alan.eva.ui.widget.StretchableList
                android:id="@+id/stretch_list_child_bind_uses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/gray_203_203_203"
                android:dividerHeight="1dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_child_detail_no_monitor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/size_30"
                android:paddingTop="@dimen/size_30"
                android:text="暂无监护人，请添加" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_child_detail_start_monitor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:layout_marginEnd="@dimen/size_10"
                android:layout_marginStart="@dimen/size_10"
                android:layout_marginTop="@dimen/size_20"
                android:background="@color/orange_255_102_64"
                android:text="开始监护"
                android:textColor="@color/white"
                android:textSize="@dimen/font_16" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_child_detail_health_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:layout_marginEnd="@dimen/size_10"
                android:layout_marginStart="@dimen/size_10"
                android:layout_marginTop="@dimen/size_20"
                android:background="@color/blue_81_146_226"
                android:text="查看健康状态"
                android:textColor="@color/white"
                android:textSize="@dimen/font_16" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_child_detail_delete"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:layout_marginEnd="@dimen/size_10"
                android:layout_marginStart="@dimen/size_10"
                android:layout_marginTop="@dimen/size_20"
                android:background="@color/gray_203_203_203"
                android:text="删除"
                android:textColor="@color/white"
                android:textSize="@dimen/font_16" />

        </LinearLayout>
    </com.Alan.eva.ui.widget.FlexibleScrollView>
</LinearLayout>