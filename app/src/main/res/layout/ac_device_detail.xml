<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar_device_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:paddingTop="@dimen/tool_bar_top_padding" />

    <com.Alan.eva.ui.widget.FlexibleScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/size_15"
                android:paddingEnd="@dimen/size_20"
                android:paddingStart="@dimen/size_20"
                android:paddingTop="@dimen/size_15">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/device_name"
                    android:textSize="@dimen/font_16" />


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_device_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textSize="@dimen/font_14"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>

            <include layout="@layout/layout_horizontal_gray_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/size_15"
                android:paddingEnd="@dimen/size_20"
                android:paddingStart="@dimen/size_20"
                android:paddingTop="@dimen/size_15">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mac_address"
                    android:textSize="@dimen/font_16" />


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_device_detail_mac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textSize="@dimen/font_14"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>

            <include layout="@layout/layout_horizontal_gray_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/size_15"
                android:paddingEnd="@dimen/size_20"
                android:paddingStart="@dimen/size_20"
                android:paddingTop="@dimen/size_15">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/battery_power"
                    android:textSize="@dimen/font_16" />


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_device_detail_power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="end"
                    android:text=""
                    android:textSize="@dimen/font_14"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>

            <include layout="@layout/layout_horizontal_gray_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/size_15"
                android:paddingEnd="@dimen/size_20"
                android:paddingStart="@dimen/size_20"
                android:paddingTop="@dimen/size_15">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/environment_temp"
                    android:textSize="@dimen/font_16" />


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_device_detail_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="end"
                    android:textSize="@dimen/font_14"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>

            <include layout="@layout/layout_horizontal_gray_line" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_device_detail_unbind"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:layout_marginEnd="@dimen/size_20"
                android:layout_marginStart="@dimen/size_20"
                android:layout_marginTop="@dimen/size_50"
                android:background="@drawable/slt_login_bg"
                android:gravity="center"
                android:text="@string/unBind"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>


    </com.Alan.eva.ui.widget.FlexibleScrollView>

</LinearLayout>