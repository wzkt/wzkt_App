<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/firstF"
    android:gravity="center_vertical"
    >
    <ImageView 
        android:id="@+id/tempB_img_back"
        android:layout_width="match_parent"
        android:layout_weight="8"
        android:layout_height="wrap_content"
        android:clickable="true"
       android:src="@drawable/register_back"
       />
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:textSize="20sp"
          android:textColor="@color/white"
        android:text="@string/selectB"/>
    <TextView 
        android:id="@+id/tempB_tv_save"
        android:layout_width="match_parent"
        android:layout_weight="8"
        android:textSize="15sp"
        android:layout_height="wrap_content"
          android:textColor="@color/white"
        android:text="@string/tempBsave"/>
</LinearLayout>

<ListView
    android:id="@+id/tempBellList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
</ListView>

</LinearLayout>
