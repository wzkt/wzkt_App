<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/size_300"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/size_10"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_input_dialog_title"
        android:textSize="@dimen/font_16"
        android:textColor="@color/black"
        android:padding="@dimen/size_15"
        android:text="请输入内容"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/edt_input_dialog_content"
        android:hint="请输入内容"
        android:maxLength="11"
        android:layout_marginStart="@dimen/size_20"
        android:layout_marginEnd="@dimen/size_20"
        android:padding="@dimen/size_5"
        android:background="@drawable/slt_edit_bg_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatTextView
        android:visibility="gone"
        android:id="@+id/tv_input_dialog_error_tips"
        android:layout_marginStart="@dimen/size_20"
        android:layout_marginTop="@dimen/size_10"
        android:text="这是错误提示信息"
        android:textColor="@color/red_213_0_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:padding="@dimen/size_10">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_input_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/size_5"
            android:text="取消"
            android:textSize="@dimen/font_16" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_input_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/size_5"
            android:text="确定"
            android:textColor="@color/blue_0_160_226"
            android:textSize="@dimen/font_16" />
    </LinearLayout>

</LinearLayout>